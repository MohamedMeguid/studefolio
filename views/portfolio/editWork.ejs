<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container">
    <div class="row">
        <div id="edit-work-form" class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Edit work</h3>
            </div>

            <div class="panel-body">

                <form action="/students/<%= currentStudent.username %>/portfolio/<%= work._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label>Link</label>
                        <input class="form-control" type="text" name="link" value="<%= work.link %>"/>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input class="form-control" type="text" name="desc" value="<%= work.details %>"/>
                    </div>
                    <button type="submit" class="btn btn-success">Edit</button>
                </form>

            </div>
        </div>
    </div>
</div>

<style>
    #edit-work-form {
        margin-top: 3.5em;
    }
</style>

<% include ../partials/footer %>

<% include ../partials/header %>
<% include ../partials/nav %>

<div class="container">
    <div class="row">
        <div id="new-portfolio-form" class="panel panel-success">
            <div class="panel-heading">
                <h3 class="panel-title">Create your Portfolio</h3>
            </div>

            <div class="panel-body">

                <form action="/students/<%= currentStudent.username %>/portfolio" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" type="text" name="name" required/>
                    </div>
                    <div class="form-group">
                        <label>Upload profile picture</label>
                        <input type="file" name="profilepic"/>
                    </div>

                    <hr>

                    <p>Please add a piece of work to finalize your portfolio creation</p>

                    <div class="form-group">
                        <label>Link</label>
                        <input class="form-control" type="text" name="link" required/>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <input class="form-control" type="text" name="desc" required/>
                    </div>
                    <button type="submit" class="btn btn-success">Create</button>
                </form>

            </div>
        </div>
    </div>
</div>

<style>
    #new-portfolio-form {
        margin-top: 3.5em;
    }
</style>

<% include ../partials/footer %>

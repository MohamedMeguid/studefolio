<% include ../partials/header %>
  <link rel="stylesheet" type="text/css" href="/stylesheets/studentForm.css" />
<% include ../partials/nav %>

<h1 id="login" class="text-center">Login to STUDEFOLIO</h1>

<div id="main-div" class="container panel panel-default">

  <form action="/students/login" method="POST">
    <div class="form-group">
      <label>Username</label>
      <input class="form-control" type="text" name="username"/>
    </div>
    <div class="form-group">
      <label>Password</label>
      <input class="form-control" type="password" name="password"/>
    </div>
    <button class="btn btn-block btn-primary">Login</button>
  <form>

  <hr>

  <p id="login-question" class="text-center">
    Don't have an account?
    <a href="/students/register">Register</a>
  </p>
</div>

<footer>
  <p id="copyright" class="text-center">
    Studefolio &copy 2017
  </p>
</footer>

</body>

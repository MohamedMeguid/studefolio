<h1 id="login" class="text-center">Login to STUDEFOLIO<sub><small>clients</small></sub></h1>

<div id="main-div" class="container panel panel-default">

  <form action="/clients/login" method="POST">
    <div class="form-group">
      <label>Username</label>
      <input class="form-control" type="text" name="username"/>
    </div>
    <div class="form-group">
      <label>Password</label>
      <input class="form-control" type="password" name="password"/>
    </div>
    <button class="btn btn-block btn-success">Login</button>
  <form>

  <hr>

  <p id="login-question" class="text-center">
    Don't have an account?
    <a href="/clients/register">Register</a>
  </p>
</div>

